@inherits WebViewPage<MenuNode>

<tr data-tt-id="@Model.ReportGroupId" data-tt-parent-id="@Model.ReportGroupParentId">
    <td><span class='folder'>@Model.ReportGroupTitle</span></td>
    <td>
        @Html.ActionLink("Edit", MVC.ReportGroup.Edit(Model.ReportGroupId), new { @class = "btn btn-default " })
        @Url.AjaxDeleteButton(MVC.ReportGroup.Delete(), Model.ReportGroupId, "Id")
        @Html.ActionLink("Reorder", MVC.ReportGroup.Reorder(Model.ReportGroupId), new { @class = "btn btn-default " })
    </td>
</tr>
@foreach (var menuNode in Model.MenuNodes)
{
    @Html.EditorFor(_ => menuNode)
}
@foreach (var report in Model.Reports)
{
    <tr data-tt-parent-id="@report.ReportGroupId" data-tt-id="@report.Id">
        <td>
            <span class="file">
                @Html.ActionLink(report.Title, MVC.Home.Report(report.Id), new { @class = !report.Enabled ? "disabled-report" : "" })
            </span>
        </td>
        <td>
            @Html.ActionLink("Edit", MVC.Report.Edit(report.Id), new { @class = "btn btn-default " })
            @Url.AjaxDeleteButton(MVC.Report.Delete(), report, i => i.Id)
        </td>
    </tr>
}